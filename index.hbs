{{!< default}}

	<header>
		
    <!-- Top Bar -->
		<nav class="main-navigation fade-header"
		{{#if @blog.cover}}
		style="background-color: linear-gradient(rgba(0, 107, 176, 0),rgba(0, 107, 176, 0));background-image: url({{@blog.cover}});"
		{{else}}
		style="background-color: linear-gradient(rgba(0, 107, 176, 0),rgba(0, 107, 176, 0)); background-image: url({{asset "images/header-background.jpg"}});"
		{{/if}}
		>
			<div class="hamburger">
				<img src="{{asset "images/hamburger.svg"}}">
			</div>

			<h1 class="title">{{@blog.title}}</h1>

		</nav>

		<div class="title-spacing"></div>

	</header>


	{{> sidebar}}

    <section>


		<ul class="rig">
			{{#foreach posts}}
				<li class="post">
					<a href="{{url}}">
					<div class="img-cont">
					  <img src="{{image}}" />
					  <div class="rig-back">
					  <h3>{{title}}</h3>
				      </div>
					</div>
				    </a>
				</li>
			{{/foreach}}
		</ul>
		
	<nav class="loadmore" role="navigation">
		<button class="loadmorebutton">Load More</button>
	</nav>

    </section>
	
	<script src="{{asset "js/index.js"}}"></script>	
